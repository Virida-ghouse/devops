{
  "build": {
    "type": "dockerfile",
    "dockerfile": "Dockerfile"
  },
  "deploy": {
    "target": "grafana-fixed",
    "command": "grafana-server --config=/etc/grafana/grafana.ini"
  },
  "environment": {
    "GF_SECURITY_ADMIN_PASSWORD": "virida-admin-2024",
    "GF_SECURITY_SECRET_KEY": "virida-secret-key-2024",
    "GF_SERVER_HTTP_PORT": "3000",
    "GF_SERVER_ROOT_URL": "https://virida-grafana.cleverapps.io",
    "GF_DATABASE_TYPE": "sqlite3",
    "GF_DATABASE_PATH": "grafana.db",
    "GF_USERS_ALLOW_SIGN_UP": "false",
    "GF_AUTH_ANONYMOUS_ENABLED": "false"
  }
}
