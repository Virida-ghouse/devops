{
  "name": "virida-frontend-3d",
  "version": "1.0.0",
  "description": "VIRIDA 3D Frontend Application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=unit",
    "test:e2e": "jest --testPathPattern=e2e",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "npm run build:staging",
    "build:staging": "NODE_ENV=staging npm run build:prod",
    "build:production": "NODE_ENV=production npm run build:prod",
    "build:prod": "echo 'Building for production...' && npm run lint && npm run test:ci",
    "health": "curl -f http://localhost:8080/health || exit 1",
    "deploy:staging": "clever deploy --alias virida-frontend-3d-staging",
    "deploy:production": "clever deploy --alias virida-frontend-3d"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "three": "^0.158.0",
    "dat.gui": "^0.7.9",
    "stats.js": "^0.17.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "nodemon": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}