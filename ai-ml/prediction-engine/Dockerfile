# ü§ñ VIRIDA Prediction Engine - Dockerfile
# Moteur de pr√©diction IA pour VIRIDA

# ü§ñ VIRIDA Prediction Engine - Dockerfile
FROM python:3.11-slim

# M√©tadonn√©es
LABEL maintainer="VIRIDA Team <dev@virida.com>"
LABEL service="prediction-engine"
LABEL version="1.0.0"

# Variables d'environnement
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PORT=8000

# Installation des d√©pendances syst√®me
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Cr√©ation d'un utilisateur non-root
RUN groupadd -r appuser && useradd -r -g appuser appuser

# R√©pertoire de travail
WORKDIR /app

# Copie des fichiers de d√©pendances
COPY requirements*.txt ./

# Installation des d√©pendances Python
RUN pip install --no-cache-dir -r requirements.txt

# Copie du code source
COPY . .

# Changement de propri√©taire
RUN chown -R appuser:appuser /app

# Utilisateur non-root
USER appuser

# Exposition du port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# D√©marrage
CMD ["python", "main.py"]
