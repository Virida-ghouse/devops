{
  "build": {
    "type": "docker",
    "dockerfile": "Dockerfile.gitea"
  },
  "deploy": {
    "target": "gitea",
    "command": "/usr/bin/entrypoint"
  },
  "environment": {
    "USER_UID": "1000",
    "USER_GID": "1000",
    "GITEA__database__DB_TYPE": "postgres",
    "GITEA__database__HOST": "your-postgres-host:port",
    "GITEA__database__NAME": "gitea",
    "GITEA__database__USER": "your-db-user",
    "GITEA__database__PASSWD": "your-db-password",
    "GITEA__server__DOMAIN": "your-domain.com",
    "GITEA__server__ROOT_URL": "https://your-domain.com",
    "GITEA__server__SSH_DOMAIN": "your-domain.com",
    "GITEA__server__SSH_PORT": "22",
    "GITEA__server__HTTP_PORT": "3000",
    "GITEA__server__PROTOCOL": "https",
    "GITEA__security__INSTALL_LOCK": "true",
    "GITEA__service__DISABLE_REGISTRATION": "false",
    "GITEA__service__REQUIRE_SIGNIN_VIEW": "false",
    "GITEA__log__LEVEL": "Info",
    "GITEA__log__ROOT_PATH": "/data/gitea/log",
    "GITEA__repository__ROOT": "/data/git/repositories",
    "GITEA__repository__LOCAL_LOCAL_COPY_PATH": "/data/gitea/tmp/local-repo",
    "GITEA__repository__LOCAL_WIKI_PATH": "/data/gitea/tmp/local-wiki",
    "GITEA__repository__UPLOAD_PATH": "/data/gitea/tmp/uploads",
    "GITEA__server__LFS_START_SERVER": "true",
    "GITEA__server__LFS_CONTENT_PATH": "/data/git/lfs",
    "GITEA__server__LFS_JWT_SECRET": "your-lfs-jwt-secret",
    "GITEA__security__SECRET_KEY": "your-secret-key",
    "GITEA__security__INTERNAL_TOKEN": "your-internal-token",
    "GITEA__security__JWT_SECRET": "your-jwt-secret",
    "GITEA__security__COOKIE_SECURE": "true",
    "GITEA__security__COOKIE_NAME": "gitea_session",
    "GITEA__security__COOKIE_USERNAME": "gitea_username",
    "GITEA__security__COOKIE_REMEMBER_NAME": "gitea_remember",
    "GITEA__security__REVERSE_PROXY_LIMIT": "1",
    "GITEA__security__REVERSE_PROXY_TRUSTED_PROXIES": "::1,127.0.0.0/8",
    "GITEA__cron__ENABLED": "true",
    "GITEA__cron__RUN_AT_START": "true",
    "GITEA__cron__MIGRATE__ENABLED": "true",
    "GITEA__cron__MIGRATE__RUN_AT_START": "true",
    "GITEA__cron__MIGRATE__SCHEDULE": "@every 24h",
    "GITEA__cron__MIRROR__ENABLED": "true",
    "GITEA__cron__MIRROR__RUN_AT_START": "true",
    "GITEA__cron__MIRROR__SCHEDULE": "@every 3h",
    "GITEA__cron__SYNC_HOOKS__ENABLED": "true",
    "GITEA__cron__SYNC_HOOKS__RUN_AT_START": "true",
    "GITEA__cron__SYNC_HOOKS__SCHEDULE": "@every 1h",
    "GITEA__cron__REPO_ARCHIVE_CLEANUP__ENABLED": "true",
    "GITEA__cron__REPO_ARCHIVE_CLEANUP__RUN_AT_START": "true",
    "GITEA__cron__REPO_ARCHIVE_CLEANUP__SCHEDULE": "@every 24h",
    "GITEA__cron__REPO_ARCHIVE_CLEANUP__OLDER_THAN": "24h",
    "GITEA__cron__UPDATE_MIRRORS__ENABLED": "true",
    "GITEA__cron__UPDATE_MIRRORS__RUN_AT_START": "true",
    "GITEA__cron__UPDATE_MIRRORS__SCHEDULE": "@every 3h",
    "GITEA__cron__REPO_HEALTH_CHECK__ENABLED": "true",
    "GITEA__cron__REPO_HEALTH_CHECK__RUN_AT_START": "true",
    "GITEA__cron__REPO_HEALTH_CHECK__SCHEDULE": "@every 24h",
    "GITEA__cron__CHECK_REPO_STATS__ENABLED": "true",
    "GITEA__cron__CHECK_REPO_STATS__RUN_AT_START": "true",
    "GITEA__cron__CHECK_REPO_STATS__SCHEDULE": "@every 24h",
    "GITEA__actions__ENABLED": "true",
    "GITEA__actions__DEFAULT_ACTIONS_URL": "https://gitea.com",
    "GITEA__actions__ENABLE_ACTIONS": "true"
  }
}




