FROM crkdocker1/virida-ai-prediction:v1.0.0

# M√©tadonn√©es Clever Cloud
LABEL clevercloud.region="par"
LABEL clevercloud.app="virida-ai-prediction"

# Exposition du port (Clever Cloud utilise le port 8080)
EXPOSE 8080

# Health check pour Clever Cloud
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

