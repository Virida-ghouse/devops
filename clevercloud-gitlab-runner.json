{
  "build": {
    "type": "docker",
    "dockerfile": "Dockerfile.gitlab-runner"
  },
  "deploy": {
    "target": "gitlab-runner",
    "command": "/usr/local/bin/start-gitlab-runner.sh"
  },
  "environment": {
    "GITLAB_URL": "https://gitlab.com",
    "GITLAB_TOKEN": "",
    "RUNNER_NAME": "virida-gitlab-runner",
    "RUNNER_LABELS": "ubuntu-latest,docker,clever-cloud",
    "RUNNER_WORK_DIR": "/workspace",
    "DOCKER_BUILDKIT": "1",
    "COMPOSE_DOCKER_CLI_BUILD": "1"
  },
  "scaling": {
    "min_instances": 1,
    "max_instances": 3
  },
  "health_check": {
    "path": "/health",
    "port": 8080
  },
  "restart": {
    "policy": "always",
    "delay": "30s"
  }
}



