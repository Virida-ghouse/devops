# ðŸš€ VIRIDA Staging Environment
# Variables d'environnement pour le staging

# ========================================
# ENVIRONNEMENT
# ========================================
NODE_ENV=staging
LOG_LEVEL=info

# ========================================
# BASE DE DONNÃ‰ES (Clever Cloud)
# ========================================
# Utilisation de la base de donnÃ©es Clever Cloud existante
CC_POSTGRESQL_ADDON_HOST=your-postgres-host.clever-cloud.com
CC_POSTGRESQL_ADDON_DB=your-database-name
CC_POSTGRESQL_ADDON_USER=your-database-user
CC_POSTGRESQL_ADDON_PASSWORD=your-database-password
STAGING_DATABASE_URL=postgresql://${CC_POSTGRESQL_ADDON_USER}:${CC_POSTGRESQL_ADDON_PASSWORD}@${CC_POSTGRESQL_ADDON_HOST}/${CC_POSTGRESQL_ADDON_DB}

# ========================================
# REDIS
# ========================================
STAGING_REDIS_URL=redis://redis:6379

# ========================================
# JWT
# ========================================
STAGING_JWT_SECRET=staging-jwt-secret-key

# ========================================
# MONITORING
# ========================================
STAGING_GRAFANA_PASSWORD=staging_grafana_password

# ========================================
# URLS
# ========================================
REACT_APP_API_URL=https://staging-api.virida.com/api
REACT_APP_3D_ENGINE=threejs

# ========================================
# MQTT
# ========================================
MQTT_BROKER=mqtt-broker
MQTT_PORT=1883

# ========================================
# MODÃˆLES IA
# ========================================
MODEL_PATH=/app/models

# ========================================
# STAGING
# ========================================
HOT_RELOAD=false
DEBUG=false
VERBOSE_LOGGING=false
